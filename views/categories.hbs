<div class="row">
  <div class="col-md-12">
    <h2>Categories
      <a href="/categories/add" class="btn btn-success pull-right">Add Category</a>
    </h2>
    <hr />
    <div class="table-responsive">
      <table class="table table-dark">
        <thead>
          <th scope="col">Category ID</th>
          <th scope="col">Category Name</th>
        </thead>
        <tbody>
          {{#each categories}}
            <tr>
              <td scope="row"><a
                  href="/posts?category={{this.id}}"
                >{{this.id}}</a></td>
              <td scope="row"><a
                  href="/posts?category={{this.id}}"
                >{{this.category}}</a></td>
                <td scope="row"><a href="/categories/delete/{{this.id}}" class="btn btn-danger pull-right">Remove</a></td>
                
            </tr>
          {{/each}}
        </tbody>
      </table>
      {{#unless posts}}
        <tr>
            <div class="col-md-12 text-center">
                <strong>{{message}}</strong>
            </div>
        </tr>
        {{/unless}}
    </div>
  </div>
</div>